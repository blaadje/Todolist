{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@core/*": ["src/core/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "dist"],
}